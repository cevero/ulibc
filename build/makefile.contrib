# Builds contrib.
contrib: contrib-microkernel

# Builds contrib headers.
contrib-headers: contrib-headers-microkernel

# Cleans contrib.
contrib-uninstall: contrib-uninstall-microkernel

# Cleans contrib headers.
contrib-uninstall-headers: contrib-uninstall-headers-microkernel

#===============================================================================
# Microkernel
#===============================================================================

# Builds Microkernel.
contrib-microkernel: make-dirs
	$(MAKE) -C $(CONTRIBDIR)/microkernel contrib RELEASE=$(RELEASE)
	$(MAKE) -C $(CONTRIBDIR)/microkernel install PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)

# Builds Microkernel headers.
contrib-headers-microkernel: make-dirs
	$(MAKE) -C $(CONTRIBDIR)/microkernel contrib-headers RELEASE=$(RELEASE)
	$(MAKE) -C $(CONTRIBDIR)/microkernel install-headers PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)

# Cleans Microkernel.
contrib-uninstall-microkernel:
	$(MAKE) -C $(CONTRIBDIR)/microkernel uninstall PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)
	$(MAKE) -C $(CONTRIBDIR)/microkernel contrib-uninstall RELEASE=$(RELEASE)

# Cleans Microkernel headers.
contrib-uninstall-headers-microkernel:
	$(MAKE) -C $(CONTRIBDIR)/microkernel uninstall-headers PREFIX=$(ROOTDIR) RELEASE=$(RELEASE)
	$(MAKE) -C $(CONTRIBDIR)/microkernel contrib-uninstall-headers RELEASE=$(RELEASE)
